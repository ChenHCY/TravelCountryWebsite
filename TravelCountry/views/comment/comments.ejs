<%- include("../_partial/_header") -%>

<div class= "row">
	<div class="col-md-6" style="margin-bottom:10px ; margin-left:30px; margin-top:50px">
		<a href="/comments/add" tpye="button" class="btn btn-default" style="background-color: #1b4d3e; color:#fff;">Add new travel country</a>
	</div>
</div>
<br />
<!-- show travel country comments -->
<!-- List all the comments. variable comments is the first variable in {comments: comments} in comments.js -->
<div class="district">
    <% comments.forEach(function(comment) { %>
        <div class="col-sm-4 col-md-4">
            <div class=" cropcomments thumbnail">
                <% if(comment.image != null) {%>
                    <% image_url = (typeof comment.image[0] === 'string') ? comment.image[0] : comment.image[0].path %>
                    <a href="comments/detail/<%= comment._id %>"> <img src="<%= '/' + image_url %>" height="250px" ></a>
                <% }else{ %>
                <img src="data:image/svg+xml;base64,"
                        alt="logo"
                        style="height:200px;width:100%;display:block">
                <% } %>
                <div class="caption">
                    <h3 style="text-align:center;"><%= comment.countryName %></h3>
                    <p> 
                        <a href="comments/delete/<%=comment._id%>" onclick="confirm('Are you sure you want to delete this comments?');" class="btn btn-primary" style = "background-color:steelblue;" role="button">Delete</a>
                        <a href="comments/update/<%=comment._id%>" style= "float: right" class="btn btn-primary" role="button">Edit</a>                     
                    </p>
                </div>
            </div>
        </div>
    <% }) %>
</div>