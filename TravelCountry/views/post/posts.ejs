<%- include("../_partial/_header") -%>
<div class= "row">
	<div class="col-md-6"  style="margin-top:80px">
		<h1> Welcome to my posts </h1>
	</div>
</div>

<div class= "row">
	<div class="col-md-6" style="margin-bottom:10px ; margin-left:30px">
		<a href="/posts/add" tpye="button" class="btn btn-default" style="background-color: #1b4d3e; color:#fff;">New Post</a>
	</div>
</div>

<!-- List all the posts -->
<% posts.forEach(function(post) { %>
    <div class="col-sm-4 col-md-4">
        <div class="thumbnail">
            <a href="posts/<%= post._id %>">
                <% if(post.image != null) { %>
                    <img src="<%= post.image %>"  
                    alt="logo"
                    style="height:200px;width:100%;display:block"
                    >
                <% } else { %>
                    <img src="data:image/svg+xml;base64,"
                    alt="logo"
                    style="height:200px;width:100%;display:block"
                    >
               <% } %>
 
            <div class="caption">
                <h3><%= post.countryName %></h3>
                <p><%= post.content %></p>
                <p><a href="posts/<%= post._id %>" class="btn btn-primary" role="button">Read</a> <a href="posts/edit/<%=post._id%>" class="btn btn-default"
                        role="button">Edit</a></p>
            </div>
        </div>
    </div>

<% }) %>


<%- include("../_partial/_footer") -%>