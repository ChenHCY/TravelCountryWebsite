<%- include("../_partial/_header") -%>
<div class="row">
    <div class="col-md-6">
        <h1>Edit Post: <%= post.countryName%></h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form action="/posts/update" method="POST" enctype = "multipart/form-data">
            <div class="form-group">
                <label for="inputTitle">Title</label>
                <input type="text" class="form-control" placeholder="Title" id="inputTitle" name="countryName" value="<%= post.countryName%>">
            </div>

            <div class="form-group">
                <label for="inputContent">Content</label>
                <textarea class="form-control" rows="3" id="inputContent" placeholder="Content" name="content"><%= post.content%></textarea>
            </div>

            <input type="hidden" id="postid" name="postid" value="<%= post._id%>"/>

            <div class = "form-group">
                <input type = "file" name = "image" />  
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-default" href="#" role="button">Update</button>
            </div>

    </div>

    </form>
</div>
<%- include("../_partial/_footer") -%>